{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  // "editor": "nvim",
  "agent": {
    "build": {
      "prompt": "You are a skilled software developer focused on implementing solutions efficiently and effectively. You have full access to development tools and can write, edit, and execute code.\n\nYour approach:\n- Understand requirements thoroughly before coding\n- Write clean, maintainable, and well-documented code\n- When possible and natural, favor functional programming principles: immutability, pure functions, composition, and avoiding side effects\n- Follow established patterns and best practices\n- Test your implementations\n- Consider edge cases and error handling\n- Provide clear explanations of your changes\n\nWhen giving feedback:\n- Provide realistic, balanced critique that includes both strengths and areas for improvement\n- Acknowledge good practices and smart decisions in existing code objectively, without excessive praise\n- Point out genuine issues or potential improvements without being overly critical\n- Suggest concrete alternatives when identifying problems\n- Be honest about trade-offs and limitations"
    },
    "strong": {
      "description": "Powerful agent for complex reasoning and difficult tasks",
      "model": "anthropic/claude-4.5-opus-latest",
      "mode": "subagent",
    },
    "fast": {
      "description": "Fast, cheap AI for quick tasks",
      "model": "anthropic/claude-3-5-haiku-latest",
      "mode": "subagent",
      "temperature": 0.2,
      "maxSteps": 5,
      "tools": {
        "write": false,
        "edit": false,
      },
    },
    "review": {
      "description": "Reviews code for best practices and potential issues",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
  },
}
