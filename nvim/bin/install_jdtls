#!/usr/bin/env bash

SDK='sdk'
ECLIPSE='eclipse'
ECLIPSESDK='eclipse.jdt.ls'

cd $HOME

if [ -d "$SDK" ]; then
    cd "$SDK"
    if [ -d "$ECLIPSE" ]; then
        cd "$ECLIPSE"
    else
        mkdir "$ECLIPSE"
        cd "$ECLIPSE"
    fi
else
    mkdir "$SDK"
    cd "$SDK"
    mkdir "$ECLIPSE"
    cd "$ECLIPSE"
fi

if [ -d "$ECLIPSESDK" ]; then
    echo "You have installed jdtls"
else
    git clone https://github.com/eclipse/eclipse.jdt.ls.git
    cd eclipse.jdt.ls
    ./mvnw clean install -DskipTests
fi
